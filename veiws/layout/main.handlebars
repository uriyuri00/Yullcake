    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/css/bootstrap-select.min.css">

    <link rel="stylesheet" href="/css/jass.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.3/css/dataTables.bootstrap5.min.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
</head>

<body class="body-container">
    {{!-- HEADER --}}
    <header>
        {{!-- <div class="flex-column justify-space-around header-container"> --}}
            <div class="header-container">
                <img src="./images/header.png" id="jumbo-header" />
                <br>
                <!-- NAVBAR -->
                <nav class="navbar navbar-expand-sm" id="nav-background">
                    <div class="mx-auto d-sm-flex d-block flex-sm-nowrap">
                        <div class="collapse navbar-collapse text-center">
                            <ul class="navbar-nav">
                                <!-- Conditionally render login or logout links -->
                                {{#if loggedIn}}
                                <a class="nav-link" href="/">Home</a>
                                <a class="nav-link" href="https://github.com/mathewsida/CheersCheck">Contact Us</a>
                                <a class="nav-link" href="/api/users/logout" id="logout">Logout</a>
                                {{else}}
                                {{!-- <a class="nav-link" href="#">Home</a> --}}
                                <a class="nav-link signup-nav" href="/signup">Signup</a>
                                <span class="navbar-brand" href="#"><img src="/images/balloon.png" width="50"
                                        height="50" alt="beers"></span>
                                <a class="nav-link login-nav" href="/login">Login</a>
                                {{/if}}
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
    </header>


    <!-- MAIN -->
    {{!-- <main class=" p-3"> --}}
        <main class="main-container">
            {{{ body }}}
        </main>
        <br>

        {{#if loggedIn}}
        {{!-- <p id="inventory-link">Go to your <a href="/users/inventory" class="inv-link">Liquor
                Cabinet</a> </p> --}}

        <script src="/js/logout.js"></script>
        {{/if}}
        </div>


        <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.13.3/js/dataTables.bootstrap5.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/animejs@3.2.1/lib/anime.min.js"></script>
</body>

</html>