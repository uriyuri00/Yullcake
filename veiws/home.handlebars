<div class="container-fluid  new-post-container">


    {{#if loggedIn}}
    <div class="inventory-header">
        <h3 class="greeting"><strong class="bold">Cheers,</strong> {{username}}!</h3>
        <div>
            <button class="btn modal-button" id="openAddInventoryButton">Add to Inventory</button>
            <button class="btn modal-button" disabled id="deleteItemButton">Delete Item</button>
        </div>
    </div>
    {{/if}}
    <div class="flex-container">
        {{!-- LIQUOR CABINET --}}
        <div class="cabinet-container">
            <div class="inventory-cabinet">
                <div class="drawer"><img id="drawer0" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer1" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer2" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer3" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer4" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer5" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer6" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer7" style="visibility:hidden" class="cabinet-image" /></div>
                <div class="drawer"><img id="drawer8" style="visibility:hidden" class="cabinet-image" /></div>
            </div>
        </div>


        {{!-- INVENTORY LIST --}}
        {{#if loggedIn}}

        {{!-- <table class="table table-dark"> --}}
            <div id="tableContainer" class="table-container">
                <table class="table table-dark flex-table" id="inventoryTable">
                    <thead>
                        <tr>
                            <th scope="col">&#x2605;</th>
                            <th scope="col">id</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Size</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if inventory}}
                        {{#each inventory}}
                        <tr>
                            <td>{{#if favorite}}&#x2605;{{else}}{{/if}}</td>
                            <td>{{inventory_id}}</td>
                            <td>{{liquor.name}}</td>
                            <td>{{liquor.volume}}</td>
                            <td>{{liquor.description}}</td>
                        </tr>
                        {{/each}}
                        {{/if}}
                    </tbody>
                </table>
            </div>

            {{!-- IF NOT LOGGED IN --}}
            {{else}}
            <div class="table-container text-white p-5 text-center">
                <h1 class=" viewer-header text-center">Liquor cabinet empty?</h1>
                <img src="/images/cheer-btn.png" class="cheersBtn" />
                <br>
                <p class="viewer-text text-justify text-center">Login to show collection!</p>

                <p class="viewer-subtitle text-justify text-center"><button class="btn viewer-button"
                        id="viewerLoginButton"><a href="/login" class="viewButton">LOGIN</a></button> or <button
                        class="btn viewer-button" id="viewerSignupButton"><a href="/signup"
                            class="viewButton">SIGNUP</a></button></p>
                <p class="viewer-text text-justify text-center">Sign up now!</p>
            </div>
            {{/if}}
    </div>
</div>

{{!-- MODAL --}}
{{#if loggedIn}}
<div class="rounded d-flex justify-content-center inventory-container" style="transform:translateX(100%);">
    <div class=" col-md-4 col-sm-12 shadow-lg p-5 add-inventory-container " id=" inventory-card">
        <div class="text-center">
            <h3 id="inventory-title">Add To Inventory</h3>
        </div>
        <div class="p-4">
            <select type="text" class="form-control" name="liquorSelect" id="liquorSelect">

            </select>
            <div class="input-group mb-3 title-text-add">

            </div>
            <p id="liquorDescription" class="add-liquor-description"></p>
            </br>
            <img src="./images/bar-logo.png" class="d-block w-100 img-fluid" alt="image">
            <img id="liquorImage" class="add-liquor-image" />
            </br>

            <div class="form-check form-switch modal-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="addFavorite">
                <label class="form-check-label" for="addFavorite">Favorite</label>
            </div>

            </br>
            <div class="d-grid col-12 mx-auto">
                <button class="btn modal-button" id="add-post-button" type="button" disabled>
                    Add</button>
            </div>
            </br>

            <button class="btn modal-close-button" id="add-close-button" type="button">
                X</button>

        </div>

    </div>
</div>
{{/if}}
{{#if loggedIn}}
<script src="/js/home.js"></script>
{{/if}}